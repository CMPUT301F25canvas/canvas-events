<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F3FF">

    <!-- Top Card Header -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/adminTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Administrator"
            android:textSize="26sp"
            android:textColor="#3A2A6A"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <!-- Cool Button Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Events -->
        <Button
            android:id="@+id/admin_events_button"
            android:layout_width="260dp"
            android:layout_height="58dp"
            android:layout_marginTop="12dp"
            android:text="Events"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/admin_button"/>

        <!-- Profiles -->
        <Button
            android:id="@+id/admin_profiles_button"
            android:layout_width="260dp"
            android:layout_height="58dp"
            android:layout_marginTop="20dp"
            android:text="Profiles"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/admin_button"/>

        <!-- Images -->
        <Button
            android:id="@+id/admin_images_button"
            android:layout_width="260dp"
            android:layout_height="58dp"
            android:layout_marginTop="20dp"
            android:text="Images"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/admin_button"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
