<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="14dp"
    android:paddingBottom="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/event_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Event Title"
            android:textColor="#1F152E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_date_highlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nov 05"
            android:textColor="#3D3350"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Short description of the event."
        android:textColor="#4F475B"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/event_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Oct 31 - Nov 03"
        android:textColor="#7A728B"
        android:textSize="12sp" />

</LinearLayout>
