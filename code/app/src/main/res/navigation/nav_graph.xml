<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.lotteryeventsystem.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_eventDetailFragment"
            app:destination="@id/eventDetailFragment"/>
        <action
            android:id="@+id/action_profileFragment_to_adminHomeFragment"
            app:destination="@id/adminHomeFragment"/>
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.lotteryeventsystem.ProfileFragment"
        android:label="@string/menu_profile_label"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_organizerEventListFragment"
            app:destination="@id/organizerEventListFragment" />
        <action
            android:id="@+id/profileFragment_to_personalInfoFragment"
            app:destination="@id/personalInfoFragment"/>
    </fragment>

    <fragment
        android:id="@+id/adminHomeFragment"
        android:name="com.example.lotteryeventsystem.AdminHomeFragment"
        tools:layout="@layout/admin_home_fragment">
        <action
            android:id="@+id/action_adminHomeFragment_to_homeFragment"
            app:destination="@id/homeFragment"/>
        <action
            android:id="@+id/action_adminHomeFragment_to_adminEventsFragment"
            app:destination="@id/adminEventsFragment"/>
        <action
            android:id="@+id/action_adminHomeFragment_to_adminProfilesFragment"
            app:destination="@id/adminProfilesFragment"/>
    </fragment>

    <fragment
        android:id="@+id/adminEventsFragment"
        android:name="com.example.lotteryeventsystem.AdminViewEvents"
        android:label="Events">
        <action
            android:id="@+id/action_adminEventFragment_to_eventDetailFragment"
            app:destination="@id/eventDetailFragment"/>
    </fragment>

    <fragment
        android:id="@+id/adminProfilesFragment"
        android:name="com.example.lotteryeventsystem.AdminViewProfiles"
        android:label="Profiles" />

    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.lotteryeventsystem.NotificationFragment"
        android:label="@string/menu_notification_label"
        tools:layout="@layout/fragment_notification">
        <action
            android:id="@+id/action_notificationFragment_to_notificationSettingsFragment"
            app:destination="@id/notificationSettingsFragment" />
        <action
            android:id="@+id/action_notificationFragment_to_notificationDetailFragment"
            app:destination="@id/notificationDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/notificationDetailFragment"
        android:name="com.example.lotteryeventsystem.NotificationDetailFragment"
        android:label="@string/notification_detail_title"
        tools:layout="@layout/fragment_notification_detail" />

    <fragment
        android:id="@+id/notificationSettingsFragment"
        android:name="com.example.lotteryeventsystem.NotificationSettingsFragment"
        android:label="@string/notification_settings"
        tools:layout="@layout/fragment_notification_settings" />

    <fragment
        android:id="@+id/eventDetailFragment"
        android:name="com.example.lotteryeventsystem.EventDetailFragment"
        android:label="Event Details"
        tools:layout="@layout/activity_event_details">
    </fragment>


    <!-- Organizer Fragment Screens -->
    <fragment
        android:id="@+id/organizerEventListFragment"
        android:name="com.example.lotteryeventsystem.OrganizerEventListFragment"
        android:label="Organizer">
        <action
            android:id="@+id/action_organizerEventListFragment_to_organizerEntrantListFragment"
            app:destination="@id/organizerEntrantListFragment"/>
        <action
            android:id="@+id/action_organizerEventListFragment_to_organizerEventCreateFragment"
            app:destination="@id/organizerEventCreateFragment"/>
    </fragment>

    <fragment
        android:id="@+id/organizerEventCreateFragment"
        android:name="com.example.lotteryeventsystem.OrganizerEventCreateFragment"
        android:label="Event Creation Form" >
        <action
            android:id="@+id/action_organizerEventCreateFragment_to_organizerEventListFragment"
            app:destination="@id/organizerEventListFragment" />
    </fragment>

    <fragment
        android:id="@+id/organizerEntrantListFragment"
        android:name="com.example.lotteryeventsystem.OrganizerEntrantListFragment"
        android:label="Event Details" >
        <argument
            android:name="EVENT_ID"
            app:argType="string" />
        <action
            android:id="@+id/action_organizerEntrantListFragment_to_EntrantListFragment"
            app:destination="@id/EntrantListFragment" />
    </fragment>

    <fragment
        android:id="@+id/EntrantListFragment"
        android:name="com.example.lotteryeventsystem.EntrantListFragment"
        android:label="Entrant Lists" >
    <argument
        android:name="LIST_TYPE"
        app:argType="string"
        android:defaultValue="waiting" />
    </fragment>

    <fragment
        android:id="@+id/personalInfoFragment"
        android:name="com.example.lotteryeventsystem.PersonalInfoFragment"
        tools:layout="@layout/fragment_personal_info">
    <action
        android:id="@+id/personalInfoFragment_to_profileFragment"
        app:destination="@id/profileFragment"/>
    </fragment>

</navigation>
