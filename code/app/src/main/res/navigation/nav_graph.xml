<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.lotteryeventsystem.HomeFragment"
        android:label="@string/menu_home_label">
        <action
            android:id="@+id/action_homeFragment_to_eventDetailFragment"
            app:destination="@id/eventDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/organizerFragment"
        android:name="com.example.lotteryeventsystem.organizer.OrganizerFragment"
        android:label="@string/menu_organizer_label" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.lotteryeventsystem.ProfileFragment"
        android:label="@string/menu_profile_label" />

    <fragment
        android:id="@+id/eventDetailFragment"
        android:name="com.example.lotteryeventsystem.EventDetailFragment"
        android:label="@string/event_detail_screen_title">
        <argument
            android:name="eventId"
            app:argType="string" />
    </fragment>
</navigation>
